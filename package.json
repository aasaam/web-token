{
  "name": "@aasaam/web-token",
  "version": "0.0.1",
  "description": "aasaam simple web token base on hmac for persist/temporary usage.",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aasaam/web-token.git"
  },
  "keywords": [
    "aasaam",
    "hmac",
    "permanent",
    "expire",
    "sign",
    "verify",
    "token"
  ],
  "engines": {
    "node": ">=10"
  },
  "jest": {
    "testRegex": ".spec.js$",
    "collectCoverageFrom": [
      "lib/**/*.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "json",
      "json-summary",
      "text",
      "lcov",
      "html",
      "clover"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^26",
    "@types/node": "^14",
    "eslint": "^7",
    "eslint-config-airbnb": "^18",
    "eslint-config-prettier": "^6",
    "eslint-plugin-import": "^2",
    "eslint-plugin-sonarjs": "^0",
    "jest": "^26",
    "prettier": "^2",
    "typescript": "^4"
  },
  "scripts": {
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "test:cover": "jest --detectOpenHandles --runInBand --collectCoverage",
    "test": "jest --detectOpenHandles --runInBand"
  },
  "authors": [
    {
      "name": "Muhammad Hussein Fattahizadeh",
